@import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap');

.source-and-credit
  clear both
  width 100%
  overflow hidden
  margin-top 1em

  p
    line-height 1.6
    padding 0
    margin 0
    font-size 12px
    text-align left
    float none

  .source span
    font-weight normal
    +mq('bp-2')
      float left

  .credit span
    text-transform uppercase
    +mq('bp-2')
      text-align right
      float right

.graphic
  &__text
    margin .5rem 0

    &--hed
      font-weight bold
      font-family 'Montserrat', Helvetica, sans-serif
      +mq('bp-2')
        font-size 1.3rem

    &--subhed
      font-size .9rem
      +mq('bp-2')
        font-size 1rem
        margin-bottom 1rem

    .table__container
      font-family Helvetica
